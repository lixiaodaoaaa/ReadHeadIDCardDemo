<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:textColor="@color/head_txt_color"
        android:text="1"
        android:gravity="center_horizontal"
        android:id="@+id/recordsid"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:textColor="@color/head_txt_color"
        android:text="姓名"
        android:gravity="center_horizontal"
        android:id="@+id/records_name"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="证件照"
        android:gravity="center_horizontal"
        android:src="@mipmap/zp"
        android:id="@+id/records_idcard"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="现场照"
        android:gravity="center_horizontal"
        android:src="@mipmap/zp"
        android:id="@+id/records_scene"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:textColor="@color/head_txt_color"
        android:text="识别结果"
        android:gravity="center_horizontal"
        android:id="@+id/records_result"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30sp"
        android:textColor="@color/head_txt_color"
        android:text="对比时间"
        android:gravity="center_horizontal"
        android:id="@+id/records_time"/>
</LinearLayout>