<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/fill_both_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <ScrollView
        style="@style/fill_both_size">
        <LinearLayout
            android:layout_width="810dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"

        >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:text="设备激活"
                android:textColor="@color/font_white"
                android:textSize="@dimen/hLargest"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/item_padding_top"
                android:gravity="center"
                android:text="请设置密码并激活设备"
                android:textColor="@color/font_white"
                android:textSize="@dimen/h2"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/item_padding_top"
                android:orientation="horizontal"

            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="账号："
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/h2"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="administrator"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/h2"
                />
            </LinearLayout>

            <com.brc.idauth.ui.view.InputBgEditText
                android:id="@+id/et_device_key"
                style="@style/fill_width_auto"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/item_padding_top"
                android:freezesText="true"
                android:textSize="@dimen/h2"
                android:hint="请输入出厂秘钥"
                android:textColor="@color/font_white"
                android:textColorHint="@color/font_hint"
                app:hintText="请输入出厂秘钥"
            />
            <com.brc.idauth.ui.view.InputBgEditText
                android:id="@+id/et_password"
                style="@style/fill_width_auto"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/item_padding_top"
                android:freezesText="true"
                android:textSize="@dimen/h2"
                android:textColor="@color/font_white"
                android:textColorHint="@color/font_hint"
                android:hint="请输入密码"
                app:hintText="请输入密码"
            />
            <com.brc.idauth.ui.view.InputBgEditText
                android:id="@+id/et_re_password"

                style="@style/fill_width_auto"
                android:textSize="@dimen/h2"
                android:layout_gravity="top|left"
                android:layout_marginTop="@dimen/item_padding_top"
                android:hint="请再次输入密码"
                android:textColorHint="@color/font_hint"
                android:background="@drawable/bg_input_password"
                android:textColor="@color/font_white"
                app:hintText="请再次输入密码"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_padding_top"
                android:id="@+id/rl_select"
                android:visibility="gone">
                <com.brc.idauth.ui.view.InputBgEditText
                    android:id="@+id/et_location"
                    style="@style/fill_width_auto"
                    android:layout_gravity="top|left"
                    android:freezesText="true"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/h2"
                    android:hint="请输入案场名字"
                    android:textColorHint="@color/font_hint"
                    app:hintText="请输入案场名字" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/more_right"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_password"
                android:hint="请输入案场名字"
                android:textColorHint="@color/font_hint"
                android:textSize="@dimen/h2"
                android:layout_marginTop="@dimen/item_padding_top"
                android:padding="20dp"
                android:drawableRight="@mipmap/more_right"
                android:textColor="@color/font_white"/>


            <Button
                android:id="@+id/btn_nest_step"
                style="@style/AppTheme.Button.Solid"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="25dp"
                android:text="下一步（1/2)"
                android:textSize="18sp"
            />
        </LinearLayout>


    </ScrollView>


</LinearLayout>