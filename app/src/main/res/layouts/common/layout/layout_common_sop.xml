<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/fill_both_with_white"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="@dimen/page_margin"
              android:paddingRight="@dimen/page_margin"
>
    <TextView
        android:id="@+id/tv_common_sop_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:drawablePadding="5dp"
        android:text="1.  检查点"
        android:textColor="@color/font_title"
        android:textSize="@dimen/h3"
        tools:text="1.  检查点"
    />

    <com.digops.ui.view.OkNotokLayout
        android:id="@+id/layout_ok_notok"
        style="@style/fill_width_horizontal"
        android:layout_below="@+id/rl_title"
        android:layout_marginTop="@dimen/item_padding_top"
        android:visibility="visible"
    />

    <TextView
        android:id="@+id/tv_sop_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_select_text_selector"
        android:enabled="true"
        android:gravity="center"
        android:paddingRight="20dp"
        android:paddingLeft="@dimen/page_margin"
        android:textColor="@color/font_sub"
        android:textSize="@dimen/h3"
        android:visibility="gone"
    />

    <com.digops.ui.view.DownArrowTextView
        android:id="@+id/layout_select_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/page_margin"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:background="@drawable/shape_select_text_selector"
        android:enabled="true"
        android:gravity="center"
        android:paddingLeft="@dimen/page_margin"
        android:textColor="@color/font_sub"
        android:textSize="@dimen/h3"
        android:visibility="gone"
        tools:visibility="visible"
    />

    <RelativeLayout
        android:id="@+id/rl_sop_photo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_select_text_selector"
        android:visibility="gone"
        tools:visibility="visible"
    >
        <ImageView
            android:id="@+id/ic_photo"
            style="@style/fill_auto_size"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_photo_camera"
        />
    </RelativeLayout>


</LinearLayout>
