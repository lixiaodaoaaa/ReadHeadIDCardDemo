<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/fill_both_vertical"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_gravity="center"
              android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/title_margin"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"

    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="问题1"
            android:textColor="@color/font_white"
            android:textSize="@dimen/h4"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="right"
            android:text="你爸爸的名字叫什么?"
            android:textColor="@color/font_white"
            android:textSize="@dimen/h4"/>
    </LinearLayout>

    <com.brc.idauth.ui.view.InputBgEditText
        android:id="@+id/et_answer1"
        style="@style/AppTheme.Input"
        android:layout_marginTop="12dp"
        app:hintText="请输入答案"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="问题2"
            android:textColor="@color/font_white"
            android:textSize="@dimen/h3"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="right"
            android:text="你妈妈的名字叫什么?"

            android:textColor="@color/font_white"
            android:textSize="@dimen/h4"/>
    </LinearLayout>


    <com.brc.idauth.ui.view.InputBgEditText
        android:id="@+id/et_answer2"
        style="@style/AppTheme.Input"
        app:hintText="请输入答案"
        android:layout_marginTop="12dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="fill_horizontal"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="问题3"
            android:textColor="@color/font_white"
            android:textSize="@dimen/h3"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:gravity="right"
            android:text="你小学班主任的名字叫什么?"
            android:textColor="@color/font_white"
            android:textSize="@dimen/h4"/>
    </LinearLayout>

    <com.brc.idauth.ui.view.InputBgEditText
        android:id="@+id/et_answer3"
        style="@style/AppTheme.Input"
        app:hintText="请输入答案"
        android:layout_marginTop="12dp"
    />
</LinearLayout>
