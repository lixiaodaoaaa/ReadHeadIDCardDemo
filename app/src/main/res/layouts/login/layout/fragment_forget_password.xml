<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/fill_both_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/common_margin_toolbar"
    android:layout_marginTop="@dimen/item_margin"
    android:background="@color/transparent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <LinearLayout
        android:layout_width="725dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"

    >
        <LinearLayout style="@style/fill_both_vertical"
                      android:layout_gravity="center"
                      android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/title_margin"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"

            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="问题1"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:gravity="right"
                    android:text="你爸爸的名字叫什么?"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/h4"/>
            </LinearLayout>

            <com.brc.idauth.ui.view.InputBgEditText
                android:id="@+id/et_answer1"
                style="@style/AppTheme.Input"
                app:hintText="请输入答案"
                android:layout_marginTop="12dp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/item_padding_top"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="问题2"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:gravity="right"
                    android:text="你妈妈的名字叫什么?"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/h4"/>
            </LinearLayout>


            <com.brc.idauth.ui.view.InputBgEditText
                android:id="@+id/et_answer2"
                style="@style/AppTheme.Input"
                app:hintText="请输入答案"
                android:layout_marginTop="12dp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_marginTop="@dimen/item_padding_top"
                android:gravity="fill_horizontal"
                android:orientation="horizontal"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="问题3"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/h3"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:gravity="right"
                    android:text="你小学班主任的名字叫什么?"
                    android:textColor="@color/font_title"
                    android:textSize="@dimen/h4"/>
            </LinearLayout>

            <com.brc.idauth.ui.view.InputBgEditText
                android:id="@+id/et_answer3"
                style="@style/AppTheme.Input"
                app:hintText="请输入答案"
                android:layout_marginTop="12dp"
            />
        </LinearLayout>


        <com.android.material.lib.widget.Button
            android:id="@+id/btn_next_step"
            style="@style/AppTheme.Button.Solid"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="@dimen/item_padding_top"
            android:text="下一步"
            android:textSize="18sp"
        />
    </LinearLayout>


</LinearLayout>