<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginLeft="80dp"
            android:text="请选择案场名称"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/hLarge"/>
        <TextView
            android:id="@+id/back_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:text="返回"
            android:textColor="@color/font_title"
            android:textSize="@dimen/h1"/>
        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/back_tv"
            android:src="@drawable/ic_back"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/search_rect"
            android:drawablePadding="12dp"
            android:drawableStart="@drawable/ic_search"
            android:hint="请输入案场名称"
            android:paddingLeft="12dp"
            android:paddingRight="60dp"
            android:textColorHint="@color/color_gray"
            android:textSize="@dimen/h3"/>
        <TextView
            android:id="@+id/sure_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="100dp"
            android:text="确定"
            android:textColor="@color/font_title"
            android:textSize="@dimen/h3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_padding_top"
        android:layout_marginRight="@dimen/item_padding_top"
        android:layout_marginTop="@dimen/item_padding_top"
        android:background="@drawable/blue_radius_10"
        android:paddingBottom="12dp"
        android:paddingTop="@dimen/item_padding_top">

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:visibility="invisible">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbox_bg"
                android:button="@null"
                android:visibility="visible"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxEms="6"
            android:singleLine="true"
            android:text="现场编号ID"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxEms="6"
            android:singleLine="true"
            android:text="案场名称"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:ellipsize="end"
            android:maxEms="6"
            android:singleLine="true"
            android:text="案场关联项目的名称"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3"/>
    </LinearLayout>
    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_square_sure"
            style="@style/AppTheme.Button.Solid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_radius_10"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/h3"/>
        <Button
            android:id="@+id/btn_square_cancel"
            style="@style/AppTheme.Button.Solid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:background="@mipmap/but_rect"
            android:text="返回"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/h3"/>
    </LinearLayout>
</LinearLayout>