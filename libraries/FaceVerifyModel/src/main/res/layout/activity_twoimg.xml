<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#454a5d"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <ImageButton
        android:id="@+id/idcard1_btn"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/idbcg2"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/idcard1_btn"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:text="识别结果:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:background="#f0f0f3"
        android:scaleType="centerCrop"
        android:textColor="#000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/result_iv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/result_tv1"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#f0f0f3"
        android:scaleType="fitCenter"
        android:textColor="#000"
        android:textSize="16sp" />

</LinearLayout>